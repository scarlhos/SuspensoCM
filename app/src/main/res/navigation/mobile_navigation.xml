<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/fragment_home">

    <fragment
        android:id="@+id/fragment_home"
        android:name="com.example.suspenso_jose_astudillo.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragment_home_to_fragment_list"
            app:destination="@id/fragment_list" />
    </fragment>

    <fragment
        android:id="@+id/fragment_list"
        android:name="com.example.suspenso_jose_astudillo.ListFragment"
        android:label="Listar"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_fragment_list_to_fragment_about"
            app:destination="@id/fragment_about" />
    </fragment>

    <fragment
        android:id="@+id/fragment_about"
        android:name="com.example.suspenso_jose_astudillo.AboutFragment"
        android:label="Listar"
        tools:layout="@layout/fragment_about" />

</navigation>